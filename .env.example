# Example .env file
# Copy this file to `.env` and fill in the values.

PYTHONPATH=python

NEXT_TELEMETRY_DISABLED=1

# Azure PostgreSQL Database (database: un80actions, schema: un80actions)
AZURE_POSTGRES_HOST=your-server.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432
AZURE_POSTGRES_DB=un80actions
AZURE_POSTGRES_USER=your-username
AZURE_POSTGRES_PASSWORD=your-password

# Email — magic link authentication via SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_FROM=your-email@example.com
SMTP_PASS=your-smtp-password

# Authentication secret — generate with: openssl rand -base64 32
AUTH_SECRET=change-me-to-a-random-secret-in-production

# Azure Blob Storage — file attachments
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=un80actions

# Python ETL only (not needed to run the app — do NOT run ETL against production DB)
# GITHUB_TOKEN=
# AIRTABLE_API_KEY=
# AIRTABLE_BASE_ID=